	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<Page
		title="{=
			'Manual Verification(' + ${manualVerifyDocuments>/}.length + ')'
		}"
		class="sapUiSizeCompact"
		showNavButton="true"
		navButtonPress="onNavBack">
		<headerContent>
			<Button icon="sap-icon://refresh" press="onRefresh" tooltip="Refresh" />
		</headerContent>
		<content>
			<Table id="manualVerifyTable"
				inset="false"
				busyIndicatorDelay="0"
				items="{
					path: 'manualVerifyDocuments>/',
					sorter: {
						path: 'manualVerifyDocuments>documentId'
					}
				}">
				<columns>
					<Column hAlign="Center">
						<Text text="Document No." />
					</Column>
					<!--<Column minScreenWidth="Tablet"
						demandPopin="true">
						<Text text="Batch" />
					</Column>-->
					<Column hAlign="Center">
						<Text text="Created On" />
					</Column>
					<Column hAlign="Center">
						<Text text="Updated On" />
					</Column>
				</columns>
				<items>
					<ColumnListItem custom:batchId="{manualVerifyDocuments>batchId}" vAlign="Middle" type="Navigation" press="onNavigateManualVerify">
						<cells>
							<ObjectIdentifier
								title="{manualVerifyDocuments>documentId}" />
							<!--<ObjectIdentifier
								title="{manualVerifyDocuments>batchName}"/>-->
							<Text
								text="{manualVerifyDocuments>createdOn}"/>
							
							<Text text="{manualVerifyDocuments>updatedOn}" wrapping="false" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
