										<unified:Currency stringValue="{lineItems>unitPrice}" currency="EUR"/>
									</t:template>
								</t:Column>
								<t:Column hAlign="Right">
									<Label text="Quantity" />
									<t:template>
										<Text text="{lineItems>quantity}" wrapping="false"/>
