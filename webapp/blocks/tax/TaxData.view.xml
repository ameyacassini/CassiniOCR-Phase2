<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns:l="sap.ui.layout"
		xmlns:unified="sap.ui.unified"
		xmlns="sap.m">
	<f:Form width="100%"
		editable="false">
		<f:layout>
			<f:ResponsiveGridLayout
				labelSpanXL="12"
				labelSpanL="12"
				labelSpanM="12"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="2"
				columnsL="2"
				columnsM="2"
				singleContainerFullSize="false" />
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement label="Tax Code">
						<f:fields>
							<Input value="{record>/Taxcode}" />
						</f:fields>
					</f:FormElement>
					<f:FormElement label="Tax Amount">
						<f:fields>
							<l:HorizontalLayout class="priceField">
								<unified:Currency currency="{record>/Currency}"/>
								<Input value="{record>/Vat}">
									<layoutData>
										<l:GridData span="XL12 L12 M12 S12" />
									</layoutData>
								</Input>
							</l:HorizontalLayout>
							
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement label="Tax Rate">
						<f:fields>
							<Input value="{record>/Taxrate}" editable="false" />
						</f:fields>
					</f:FormElement>
					<!--<f:FormElement label="Calculate Tax">
						<f:fields>
							<CheckBox />
						</f:fields>
					</f:FormElement>-->
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</mvc:View>